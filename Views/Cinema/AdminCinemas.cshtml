@model List<Cinema>

@{
    Layout = "_AdminLayout";
}



@*Admin Section Start------------------------------------------------------*@

<div class="search-box pull-left mb-5">
                            <form asp-action="AdminCinemas" asp-controller="Cinema" method = "get">
                                <input type="search" value=@ViewData["searching"] name="Keyword" placeholder="Search for Cinemas..." >
                                <i class="ti-search"></i>
                                <input type="submit" style="display: none" />
                            </form>
                        </div>
<div class="container mt-5">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
	  @foreach(var i in Model){
    <tr>
      <th scope="row">@i.Id</th>
      <td>@i.Name</td>
      <td>@i.Location</td>
      <td>@i.Description</td>
      <td> <a asp-action="UpdateForm" asp-route-id = "@i.Id"> <i class="fa fa-edit"></i></a> <a asp-action="Delete" asp-route-id = "@i.Id"> <i class="ti-trash"></i></a> <a asp-action="CinemaDetailsAdmin" asp-route-id = "@i.Id"><i class="fa fa-arrow-circle-right"></i></a></td>

    </tr>
	  }
  </tbody>
</table>
@if(Model.Count == 0)
{
    <img src="/images/error/notfound.png" style="height:50vh; text-align:center; margin-left:30%;" />
    <a asp-action="InsertForm" class="btn btn-warning font-weight-bold" style=" color: white; width:70px; height:70px; border-radius:50%; text-align:center; padding: 2.5% 0;"> Add  <i class="fa fa-plus-circle"></i></a>

}
    @if(Model.Count != 0)
    {
        <a asp-action="InsertForm" class="btn btn-primary"> Add  <i class="fa fa-plus-circle"></i></a>  
    }
</div>
@*Admin Section end -----------------------------------------*@