@model List<MovieBooking.Models.FeaturedShowingsViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="movies-container">
    @foreach (var movie in Model)
    {

        <div class="movie-card">
            <!-- Đảm bảo đường dẫn hình ảnh chính xác -->
            <img src="@movie.movie_image_url" alt="@movie.movie_title" class="movie-poster">
            <div class="movie-info">
                <h3>@movie.movie_title</h3>
            </div>
        </div>
    }
</div>


<style>
    h3 {
        color: #000 !important;
    }

    .movies-container {
        display: flex;
        flex-wrap: wrap; /* Cho phép các card phim xuống dòng nếu không đủ chỗ */
        gap: 20px; /* Khoảng cách giữa các card */
        justify-content: flex-start; /* Căn các card về bên trái */
    }

    .movie-card {
        width: 300px; /* Chiều rộng của mỗi card */
        min-height: 500px; /* Đảm bảo chiều cao card đủ để chứa hết thông tin */
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        background-color: #fff;
        display: flex;
        flex-direction: column;
    }

    .movie-poster {
        width: 100%;
        height: 250px; /* Chiều cao ảnh */
        object-fit: cover; /* Đảm bảo ảnh không bị méo */
    }

    .movie-info {
        padding: 20px;
        flex-grow: 1; /* Cho phép phần mô tả mở rộng khi cần */
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .movie-card h3 {
        margin: 10px 0;
    }

    .movie-card p {
        font-size: 14px;
        color: #555;
        margin-bottom: 10px; /* Tạo khoảng cách giữa các dòng mô tả */
    }
</style>




