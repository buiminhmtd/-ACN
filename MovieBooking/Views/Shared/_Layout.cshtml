<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <title>Movie</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', Arial, sans-serif !important;
            color: #fff !important;
            min-height: 100vh;
            background-image: url("../../images/ft-bg.jpg");
            background-repeat: repeat-x;
            background-position: center;
            background-size: cover;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.9);
            padding: 1rem 0;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .navbar-brand {
            color: white;
            text-decoration: none;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                height: 40px;
                margin-right: 10px;
                background-color:grey;
            }

        .navbar-toggler {
            display: none;
            background: transparent;
            border: 1px solid rgba(255,255,255,0.5);
            padding: 0.5rem;
            cursor: pointer;
        }

        .navbar-toggler-icon {
            display: inline-block;
            width: 1.5em;
            height: 1.5em;
            background: url("../../images/ft-bg.jpg");
        }

        .navbar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-collapse {
            display: flex;
            flex-grow: 1;
            align-items: center;
            justify-content: space-between;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 1rem;
        }

        .nav-link {
            color: white !important;
            text-decoration: none;
            padding: 0.5rem 1rem;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #e31c5f;
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 10px;
            }
        .navbar-nav .nav-item.active .nav-link {
            color: #e31c5f !important;
        }
        /* Search Bar */
        .search-container {
            display: flex;
            align-items: center;
            margin-right: 70px; /* Moves search bar slightly to the left */
        }

        .search-bar-container {
            display: flex;
            width: 300px;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.2);
        }

        .search-bar {
            flex: 1;
            padding: 0.5rem 1rem;
            border: none;
            background: transparent;
            color: white;
            font-size: 1rem;
        }

            .search-bar::placeholder {
                color: white;
                opacity: 0.7;
            }

        .search-button {
            background-color: transparent;
            border: none;
            padding: 0.5rem 1rem;
            color: white;
            cursor: pointer;
        }

            .search-button i {
                font-size: 1rem;
            }

            .search-button:hover {
                background-color: rgba(255, 255, 255, 0.3);
            }

        .body-content {
            padding: 2rem 0;
        }

        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem;
            margin: 2rem 0;
        }

        .movie-card {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s;
        }

            .movie-card:hover {
                transform: translateY(-5px);
            }

            .movie-card img {
                width: 100%;
                height: 375px;
                object-fit: cover;
            }

        footer {
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        @@media (max-width: 768px) {
            .navbar-toggler {
                display: block;
            }

            .navbar-collapse {
                display: none;
                width: 100%;
                position: absolute;
                top: 100%;
                left: 0;
                background: rgba(0, 0, 0, 0.9);
                padding: 1rem;
            }

                .navbar-collapse.show {
                    display: block;
                }

            .navbar-nav {
                flex-direction: column;
                width: 100%;
            }

            .nav-link {
                display: block;
                padding: 0.5rem 0;
            }

            .search-container {
                width: 100%;
                margin-top: 1rem;
            }

            .search-bar-container {
                width: 100%;
            }
        }
        footer {
            background-color: rgba(0, 0, 0, 0.9);
            padding: 2rem 0;
            color: #fff;
            text-align: center;
            margin-top: 2rem;
        }

        .footer-columns {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 2rem;
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-column {
            flex: 1;
            min-width: 200px;
        }

            .footer-column h5 {
                margin-bottom: 1rem;
                font-size: 1.2rem;
            }

            .footer-column ul {
                list-style: none;
                padding: 0;
            }

                .footer-column ul li {
                    margin-bottom: 0.5rem;
                }

                    .footer-column ul li a {
                        color: #fff;
                        text-decoration: none;
                        transition: color 0.3s;
                    }

                        .footer-column ul li a:hover {
                            color: #e31c5f;
                        }

        .social-icons {
            margin-top: 1rem;
        }

            .social-icons a {
                color: white;
                margin: 0 10px;
                font-size: 1.5rem;
            }

                .social-icons a:hover {
                    color: #e31c5f;
                }

        .footer-bottom {
            margin-top: 2rem;
            font-size: 0.9rem;
        }

    </style>
    <!-- Font Awesome for search icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrQkTyUZx0DSjvJ2MD3idB1WXT1KY2TaAlD+G2C2V/M0xz5n/r9fU5RJ8vrB18xz0sDwXdqz2OBfZbB5Q==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a href="#" class="navbar-brand">
                <img src="~/images/logo2.png" alt="Logo">
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Movie List", "MovieList", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <div class="search-container">
                    <div class="search-bar-container">
                        <form method="get" action="@Url.Action("Search", "Home")">
                            <input class="search-bar" type="search" name="query" placeholder="Search" aria-label="Search">
                            <button class="search-button" type="submit"><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                </div>

                <div class="auth-buttons">
                    <ul class="navbar-nav flex-grow-1">

                        @{
                            var isUserLoggedIn = Session["user"] != null; // Kiểm tra xem người dùng đã đăng nhập chưa
                        }

                        @if (isUserLoggedIn)
                        {
                            <li style="padding: 10px 0">@Html.ActionLink("Log out", "logout", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else
                        {
                            <li style="padding: 10px 0">@Html.ActionLink("Log in", "Login", "Users", new { area = "" }, new { @class = "nav-link" })</li>

                        }
                        <li style="background: #e31c5f; border-radius: 4px;padding: 10px 0">@Html.ActionLink("Signup", "Signup", "Users", new { area = "" }, new { @class = "nav-link" })</li>

                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">

        <div>
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="footer-columns">
            <div class="footer-column">
                <h5>About Us</h5>
                <p>Discover the best movies and book your tickets easily with our online platform. Enjoy an unparalleled movie experience with us.</p>
            </div>
            <div class="footer-column">
                <h5>Quick Links</h5>
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Movies</a></li>
                    <li><a href="#">Showtimes</a></li>
                    <li><a href="#">Contact</a></li>
                    <li><a href="#">Terms of Service</a></li>
                </ul>
            </div>
            <div class="footer-column">
                <h5>Contact Us</h5>
                <p>Email: support@movietickets.com</p>
                <p>Phone: (123) 456-7890</p>
            </div>
            <div class="footer-column">
                <h5>Follow Us</h5>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 Movie Tickets. All rights reserved.</p>
        </div>
    </footer>

    <script>
        document.querySelector('.navbar-toggler').addEventListener('click', function () {
            document.querySelector('.navbar-collapse').classList.toggle('show');
        });
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
