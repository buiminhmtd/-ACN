<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NamSherlock - Movie Review</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif !important;
            color: #fff !important;
            min-height: 100vh;
            background-image: url("../../images/ft-bg.jpg");
            background-repeat: repeat-x; /* Lặp lại theo chiều dọc */
            background-position: center;
            background-size: cover;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8);
            padding: 1rem 0;
        }

        .container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        .navbar-brand {
            color: white;
            text-decoration: none;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
        }

        .navbar-brand img {
            height: 40px;
            margin-right: 10px;
        }

        .navbar-toggler {
            display: none;
            background: transparent;
            border: 1px solid rgba(255,255,255,0.5);
            padding: 0.5rem;
            cursor: pointer;
        }

        .navbar-toggler-icon {
            display: inline-block;
            width: 1.5em;
            height: 1.5em;
            background: url("../../images/ft-bg.jpg");
        }

        .navbar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-collapse {
            display: flex;
            flex-grow: 1;
            align-items: center;
            justify-content: space-between;
        }

        .navbar-nav {
            display: flex;
            list-style: none;
            margin: 0;
            padding: 0;
            gap: 1rem;
        }

        .nav-link {
            color: white !important;
            text-decoration: none;
            padding: 0.5rem 1rem;
            transition: color 0.3s;
        }

        .nav-link:hover {
            color: #e31c5f;
        }

        .body-content {
            padding: 2rem 0;
        }

        .search-container {
            padding: 2rem 0;
        }

        .search-bar {
            width: 100%;
            padding: 1rem;
            border-radius: 4px;
            border: none;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            font-size: 1rem;
        }

        .movie-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 2rem;
            margin: 2rem 0;
        }

        .movie-card {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.3s;
        }

        .movie-card:hover {
            transform: translateY(-5px);
        }

        .movie-card img {
            width: 100%;
            height: 375px;
            object-fit: cover;
        }

        footer {
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        @@media (max-width: 768px) {
            .navbar-toggler {
                display: block;
            }

            .navbar-collapse {
                display: none;
                width: 100%;
                position: absolute;
                top: 100%;
                left: 0;
                background: rgba(0, 0, 0, 0.9);
                padding: 1rem;
            }

            .navbar-collapse.show {
                display: block;
            }

            .navbar-nav {
                flex-direction: column;
                width: 100%;
            }

            .nav-link {
                display: block;
                padding: 0.5rem 0;
            }
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
            <a href="#" class="navbar-brand">
                <img src="../../images/logo_meow1.jfif" alt="Logo">
                NamSherlock
            </a>
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Movie List", "MovieList", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <div class="auth-buttons">
                    <ul class="navbar-nav flex-grow-1">
                        @{
                            var isUserLoggedIn = Session["user"] != null; // Kiểm tra xem người dùng đã đăng nhập chưa
                        }

                        @if (isUserLoggedIn)
                        {
                            <li style="padding: 10px 0">@Html.ActionLink("Log out", "logout", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                        }
                        else
                        {
                            <li style="padding: 10px 0">@Html.ActionLink("Log in", "Login", "Users", new { area = "" }, new { @class = "nav-link" })</li>

                        }
                        <li style="background: #e31c5f; border-radius: 4px;padding: 10px 0">@Html.ActionLink("Signup", "Signup", "Users", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <div class="container body-content">

        <div>
            @RenderBody()
        </div>

        <footer>
            <p>&copy; 2024 - Nam Sherlock's Movie Review</p>
        </footer>
    </div>

    <script>
        document.querySelector('.navbar-toggler').addEventListener('click', function () {
            document.querySelector('.navbar-collapse').classList.toggle('show');
        });
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>