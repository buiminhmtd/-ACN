@model IEnumerable<MovieBooking.Models.Booking>

@{
    ViewBag.Title = "BillTracking";
    Layout = "~/Views/Shared/_LayoutAdmins.cshtml";
}

<h2>BillTracking</h2>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                showtime_id
            </th>
            <th>
                username
            </th>
            <th>
                booking data
            </th>
            <th>
                Total amount
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Showtime.showtime_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.booking_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.total_amount)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details_booking", new { id = item.booking_id }) 
                </td>
            </tr>
        }

    </table>
</body>
</html>
