@{
    Layout = null;
    ViewBag.Title = "SuccessView";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt Vé Thành Công</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: url('/images/ft-bg.jpg') center/cover no-repeat;
            color: white;
            text-align: center;
        }

        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: -1;
        }

        .card {
            margin: 400px auto;
            background: rgba(255, 255, 255, 0.9);
            color: black;
            padding: 20px 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
            display: inline-block;
        }

        h1 {
            margin: 20px 0;
            font-size: 2.5rem;
        }

        .confetti {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
        }

        .btn-home {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 1rem;
            color: white;
            background-color: #007BFF;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            cursor: pointer;
        }

            .btn-home:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="overlay"></div>
    <canvas class="confetti"></canvas>
    <div class="card">
        <h1>🎉 Đặt vé thành công! 🎉</h1>
        <a href="@Url.Action("MovieList", "Home")" class="btn-home">Về Trang Chủ</a>
    </div>
    <script>
        const confetti = document.querySelector('.confetti');
        const context = confetti.getContext('2d');
        confetti.width = window.innerWidth;
        confetti.height = window.innerHeight;

        const particles = [];
        for (let i = 0; i < 100; i++) {
            particles.push({
                x: Math.random() * confetti.width,
                y: Math.random() * confetti.height,
                speedX: Math.random() * 3 - 1.5,
                speedY: Math.random() * 3 + 2,
                radius: Math.random() * 4 + 1,
                color: `hsl(${Math.random() * 360}, 100%, 50%)`
            });
        }

        function draw() {
            context.clearRect(0, 0, confetti.width, confetti.height);
            particles.forEach(p => {
                p.x += p.speedX;
                p.y += p.speedY;
                if (p.y > confetti.height) p.y = 0;
                context.beginPath();
                context.arc(p.x, p.y, p.radius, 0, 2 * Math.PI);
                context.fillStyle = p.color;
                context.fill();
            });
            requestAnimationFrame(draw);
        }
        draw();
    </script>
</body>
</html>
